<h2>物件一覧</h2>

<table>
  <tr>
    <th>物件名</th>
    <th>賃料</th>
    <th>住所</th>
    <th>築年数</th>
    <th>備考</th>
  </tr>
  <% @properties.each do |pro| %>
    <tr>
      <td><%= pro.name %></td>
      <td><%= pro.rent %></td>
      <td><%= pro.address %></td>
      <td><%= pro.age %></td>
      <td><%= pro.remarks %></td>
      <td><%= link_to '詳細', property_path(pro.id) %></td>
      <td><%= link_to '編集', edit_property_path(pro.id) %></td>
      <td><%= link_to '削除', property_path(pro.id), method: :delete, data: { confirm: '本当に削除しますか？'} %></td>
    </tr>
  <% end %>
</table>

<%= link_to '物件を登録する', new_property_path %>
